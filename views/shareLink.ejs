<%- include('layouts/header.ejs') %>

<div class="container">
  <div>
    <img
      src="/<%=group.image%>"
      width="100px"
      height="100px"
      style="border-radius: 100%"
    />
    <p><b> <%=group.name%> </b></p>
    <p>
      <b> Total Members: </b>
      <%=totalMembers%>
    </p>

    <% if(availableSpaceInGroup != 0) { %>
    <p>Available for: <b> <%= availableSpaceInGroup %></b> members only</p>
    <% } %> <% if(isOwner) { %>
    <p>You are the owner of this group so you can't join.</p>
    <% } else if(isJoined > 0) { %>
    <p>You already joined this group.</p>
    <% } else if(availableSpaceInGroup === 0){%>
    <p>Group already filled.</p>
    <% }else{ %>
    <button class="btn btn-primary joinNow" data-id="<%=group._id%>">
      Join Now
    </button>
    <% } %>
  </div>
</div>

<%- include('layouts/footer.ejs') %>
